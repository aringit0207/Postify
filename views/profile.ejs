<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>My Profile</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <div class="containerpers">
        <div class="cardpers">
          <div class="profile-picture">
            <img src="https://th.bing.com/th/id/OIP.Z306v3XdxhOaxBFGfHku7wHaHw?rs=1&pid=ImgDetMain" alt="Profile Picture">
          </div>
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username"><%= user.username %></h3>
          <a href="/feed" class="btn btn-primary">Feed</a>
          <a href="/login" class="btn btn-danger">Logout</a>

          <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="text" name="filecaption" placeholder="Some Caption">
            <input type="file" name="file">
            <button type="submit" class="btn btn-secondary">Upload</button>
          </form>
        </div>
    </div>

    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post) { %>
          <div class="card" style="width: 18rem;">
            <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
            <div class="card-body card-body-container d-flex justify-content-between">
              <h5 class="card-title highlight"><%= post.imageText %></h5>
              <form action="/posts/<%= post._id %>/delete" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              </div>
          </div>
        <% }) %>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>